@model IEnumerable<WebStore.Models.Product>
<div class="category-tab"><!--category-tab-->
	<div class="col-sm-12">
		<ul class="nav nav-tabs">
			<li class="active"><a href="#tshirt" data-toggle="tab">T-Shirt</a></li>
			<li><a href="#blazers" data-toggle="tab">Blazers</a></li>
			<li><a href="#sunglass" data-toggle="tab">Sunglass</a></li>
			<li><a href="#kids" data-toggle="tab">Kids</a></li>
			<li><a href="#poloshirt" data-toggle="tab">Polo shirt</a></li>
		</ul>
	</div>
	<div class="tab-content">
		<div class="tab-pane fade active in" id="tshirt" > 
			@foreach (var product in Model.Take(4))
			{
				<div class="col-sm-3">
					<partial name="~/Views/Catalog/Partial/CatalogCard/_CatalogCardShort.cshtml" model=product />
				</div>
			}	 
		</div>
							
		<div class="tab-pane fade" id="blazers" >
			@foreach (var product in Model.Skip(4).Take(4))
			{
				<div class="col-sm-3">
					<partial name="~/Views/Catalog/Partial/CatalogCard/_CatalogCardShort.cshtml" model=product />
				</div>
			}	 
		</div>
							
		<div class="tab-pane fade" id="sunglass" >
			@foreach (var product in Model.Skip(8).Take(4))
			{
				<div class="col-sm-3">
					<partial name="~/Views/Catalog/Partial/CatalogCard/_CatalogCardShort.cshtml" model=product />
				</div>
			}	 
		</div>
							
		<div class="tab-pane fade" id="kids" >
			@foreach (var product in Model.Skip(12).Take(4))
			{
				<div class="col-sm-3">
					<partial name="~/Views/Catalog/Partial/CatalogCard/_CatalogCardShort.cshtml" model=product />
				</div>
			}	 
		</div>
							
		<div class="tab-pane fade" id="poloshirt" >
			@foreach (var product in Model.Skip(16).Take(4))
			{
				<div class="col-sm-3">
					<partial name="~/Views/Catalog/Partial/CatalogCard/_CatalogCardShort.cshtml" model=product />
				</div>
			}	 
		</div>
	</div>
</div><!--/category-tab-->