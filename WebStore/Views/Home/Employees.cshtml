@model IEnumerable<WebStore.Models.Employee>
<!DOCTYPE html>
<html>
    <head>
        <title>Сотрудники</title>
    </head>
    <body>  
        <div style="float: left; width: 100%; margin: 10px 0">
            <h1 style="display: block; float: left; padding: 0; margin: 0 50px 0 0">
                <a href="~/home" style="padding:10px 10px 15px 10px; line-height: 20px; border: solid 1px gray; color: black; text-decoration: none">главная</a>
            </h1>
            <table>
                <thead>
                    <tr>
                        <th style="padding: 0px 15px">ID</th>
                        <th style="padding: 0px 15px">ФИО</th>
                        <th style="padding: 0px 15px">Возраст</th>
                        <th style="padding: 0px 15px">Подразделение</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var employee in Model)
                    {
                    <tr style="text-align: center">
                        <td style="padding: 5px 15px">@employee.Id</td>
                        <td style="padding: 5px 15px">
                            <a href="~/home/employees/@employee.Id">@employee.ShortName()</a>
                        </td>
                        <td style="padding: 5px 15px">@employee.Age</td>
                        <td style="padding: 5px 15px">@employee.Department.Title</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </body>
</html> 