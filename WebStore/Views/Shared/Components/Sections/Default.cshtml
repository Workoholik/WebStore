@model IEnumerable<SectionViewModel>

<h2>Category</h2>
<div class="panel-group category-products" id="accordian"><!--category-productsr-->

	@foreach(var parent_sestion in Model) {
		if (parent_sestion.ChildSections.Count > 0)
		{
			<div class="panel panel-default">
				<div class="panel-heading">
					<h4 class="panel-title">
						<a data-toggle="collapse" data-parent="#accordian" href="#@parent_sestion.GetHashCode()">
							<span class="badge pull-right"><i class="fa fa-plus"></i></span>
							@parent_sestion.Name
						</a>
					</h4>
				</div>
				<div id="@parent_sestion.GetHashCode()" class="panel-collapse collapse">
					<div class="panel-body">
						<ul>
							@foreach (var child_section in parent_sestion.ChildSections)
							{
								<li>
									<a href="">
										@child_section.Name
									</a>
								</li> 
							}
						</ul>
					</div>
				</div>
			</div>  
			
		} 
		else
		{
			<div class="panel panel-default">
				<div class="panel-heading">
					<h4 class="panel-title">
						<a href="#">
							@parent_sestion.Name
						</a>
					</h4>
				</div>
			</div>
		}
	}
</div><!--/category-productsr-->